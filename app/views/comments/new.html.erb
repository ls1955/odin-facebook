<%= form_with model: @comment do |form| %>
  <%= form.hidden_field :post_id, value: params[:post_id] %>
  <%= form.hidden_field :author_id, value: current_user.id %>

  <div class="field">
    <%= form.text_area :body %>
  </div>

  <div class="action">
    <%= form.submit "Comment" %>
  </div>
<% end %>
